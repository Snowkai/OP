<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OP.About"
             Title="About">
    <VerticalStackLayout
        VerticalOptions="Center"
        >
        <Label 
            Text="This app created with .NET MAUI"
            FontSize="20"            
            HorizontalOptions="Center" />
        <Button
            x:Name="btn_about_back"
            Text="Back"
            FontSize="25"
            HorizontalOptions="Center"
            Clicked="btn_about_back_Clicked"
            Margin="20"
            />
    </VerticalStackLayout>
</ContentPage>